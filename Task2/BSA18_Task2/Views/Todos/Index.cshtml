@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<section class="functionalityPanel panel panel-default">
    <a class="btn">
        Get all todos
    </a>

    @using (Html.BeginForm("GetUserTodos", "Todos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label class="col-md-2 control-label">Target user id</label>
                    <div class="col-md-10">
                        <input type="number" name="userId" placeholder="User id" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get user todos" />
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("GetCompletedUserTodos", "Todos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label class="col-md-2 control-label">Target user id</label>
                    <div class="col-md-10">
                        <input type="number" name="userId" placeholder="User id" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get completed user todos" />
                </div>
            </div>
        </div>
    }
</section>

