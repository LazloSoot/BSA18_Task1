@model Core.Entities.Comment
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">Comments</h2>

<section class="functionalityPanel panel panel-default">

    @using (Html.BeginForm("GetShortCommentsList", "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.Id, "Target user id: ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(u => u.Id)
                        @Html.ValidationMessageFor(u => u.Id)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get short comments list" />
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("GetUserCommentsList", "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.Id, "Target user id: ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(u => u.Id)
                        @Html.ValidationMessageFor(u => u.Id)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get user comments" />
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("GetCommentsCount", "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.Id, "Target user id: ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(u => u.Id)
                        @Html.ValidationMessageFor(u => u.Id)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get comments count" />
                </div>
            </div>
        </div>
    }
</section>