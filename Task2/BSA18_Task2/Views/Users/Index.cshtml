@model Core.Entities.User

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">Users</h2>

<section class="functionalityPanel panel panel-default">

    <div class="btn-group btn-group-vertical">
        @Html.ActionLink("Get all users", "GetAllUsers", null, new { @class = "btn btn-default" })

        @Html.ActionLink("Get ordered user list", "GetOrderedUserList", null, new { @class = "btn btn-default" })
    </div>
    

    @using (Html.BeginForm("GetUserInfo", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.Id, "Target user id: ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(u => u.Id)
                        @Html.ValidationMessageFor(u => u.Id)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Get user info" />
                </div>
            </div>
        </div>
    }
</section>

